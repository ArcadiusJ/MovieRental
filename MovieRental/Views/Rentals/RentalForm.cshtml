@model MovieRental.ViewModels.RentalFormViewModel

@{
    ViewBag.Title = "MovieRentalForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MovieRentalForm</h2>

@using (Html.BeginForm("Save", "Rentals"))
{
@Html.ValidationSummary(true, "Please fix the following errors.")
<div class="form-group">
    @Html.LabelFor(m => m.CustomerId)
    @Html.DropDownListFor(m => m.CustomerId, new SelectList(Model.Customers, "Id", "Name"), "--Select--", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.CustomerId)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.MovieId)
    @Html.DropDownListFor(m => m.MovieId,  new SelectList(Model.Movies, "Id", "Name"), "--Select--", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.MovieId)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.ReturnDate)
    @Html.TextBoxFor(m => m.ReturnDate, "{0:dd MM yyyy}", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.ReturnDate)
</div>

@Html.HiddenFor(m => m.Id)
@Html.AntiForgeryToken()
<button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
